{
  "name": "web-template",
  "license": "MIT",
  "scripts": {
    "dev": "babel-node bin/server.js",
    "clean": "rm -rf .next && rm -rf src/.next && rm -rf dist && rm -rf reports && rm -rf coverage",
    "build": "npm run clean && next build src && NODE_ENV=production babel --copy-files --ignore node_modules,dist -d dist .",
    "start": "NODE_ENV=production node dist/bin/server.js",
    "lint": "eslint --ignore-path .gitignore --max-warnings=0 .",
    "lint:ci": "npm run lint --- --format junit -o reports/junit/js-lint-results.xml",
    "jest": "jest --config src/config/jest/index.js",
    "jest:ci": "JEST_JUNIT_OUTPUT=reports/junit/js-test-results.xml npm run jest -- --testResultsProcessor=\"jest-junit\" --ci --runInBand",
    "jest:watch": "jest --watch --config src/config/jest/index.js",
    "jest:watch:coverage": "jest --watchAll --config src/config/jest/index.js --coverage",
    "test": "npm run lint && npm run build && npm run jest",
    "test:ci": "npm run lint:ci && npm run build && npm run jest:ci"
  },
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-plugin-emotion": "^9.0.1",
    "babel-plugin-inline-import": "^2.0.6",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-inline-env-vars": "^1.0.1",
    "babel-preset-env": "^1.6.1",
    "emotion": "^9.0.2",
    "emotion-server": "^9.0.2",
    "express": "^4.16.2",
    "i18next": "^10.4.1",
    "i18next-browser-languagedetector": "^2.1.0",
    "i18next-express-middleware": "^1.0.10",
    "i18next-node-fs-backend": "^1.0.0",
    "i18next-xhr-backend": "^1.5.1",
    "next": "^5.0.0",
    "prop-types": "^15.6.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-emotion": "^9.0.2",
    "react-i18next": "^7.4.0"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.2",
    "babel-jest": "^22.4.1",
    "babel-plugin-root-import": "^5.1.0",
    "babel-preset-react": "^6.24.1",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.1",
    "eslint": "^4.18.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-import-resolver-babel-plugin-root-import": "^1.1.1",
    "eslint-plugin-babel": "^4.1.2",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-jest": "^21.12.2",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "jest": "^22.4.2",
    "jest-emotion": "^9.0.0",
    "jest-junit": "^3.6.0",
    "jsdom": "^11.6.2",
    "jsdom-global": "^3.0.2",
    "react-test-renderer": "^16.2.0",
    "supertest": "^3.0.0"
  }
}
